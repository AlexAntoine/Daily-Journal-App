<%- include('partials/header');%>
<h1>Home</h1>

<p> <%= _homeContent %> </p>

<% posts.forEach(function(post){ %>

   <h1> <%= post._title; %></h1> 
 
   <% if(post.content.length >= 100) { %>
      <%= post.content.slice(0,100) + "..."; %>
   <% }else { %>
      <p> <%= post.content; %> </p> 
   <%}; %>
   

<%});%>


